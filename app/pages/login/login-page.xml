<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="Nawab Voice Chat" />
    
    <StackLayout class="p-4">
        <Label text="Welcome to Nawab" class="text-3xl text-center font-bold mb-4" />
        <Label text="Please enter your username to continue" class="text-lg text-center text-gray-600 mb-8" />
        
        <TextField hint="Username" text="{{ username }}" class="input mb-4 p-4 border rounded-lg" />
        
        <Button text="Join Rooms" tap="{{ onLogin }}" 
                class="btn bg-purple-600 text-white font-bold py-4 rounded-lg" />
    </StackLayout>
</Page>